<%- include('layout/header.ejs') %>

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1.0" />
    </head>
    <body style="padding-bottom: 2em">
        <div
            class="content"
            style="width: 50% !important">
            <div
                class="card"
                style="max-width: 33%">
                <div style="padding-top: 3%">
                    <img
                        src="/<%=data.image %>"
                        alt=""
                        class="img-thumbnail"
                        style="width: 80%; align-self: center"
                        width="100" />
                </div>
                <h3><%= data.name %></h3>
                <p class="title"><%= data.title %></p>
                <p><%= data.id %></p>
                <p>warnings : <%= data.partScore.warnings %></p>
                <p></p>
                <div
                    class="d-flex justify-content-center"
                    style="text-wrap: nowrap; padding-bottom: 3%">
                    <a
                        href="/edit-part/<%= data._id  %>"
                        class="btn btn-warning btn-sm"
                        style="width: 30%; margin-right: 2.5%"
                        >Edit</a
                    >

                    <a
                        href="/delete-part/<%=data._id%>"
                        style="width: 30%; margin-right: -2.5%"
                        class="btn btn-danger btn-sm mr-1"
                        >Delete</a
                    >
                </div>
                <div
                    class="d-flex justify-content-center"
                    style="text-wrap: nowrap; padding-bottom: 3%">
                    <a
                        href="/view-part-as/<%= data.id %>"
                        type="button"
                        class="btn btn-info btn-sm ml-3"
                        >View</a
                    >
                </div>
            </div>
            <h1 style="margin-left: 1em">
                <a
                    href="/part-add-warrning/<%= data._id %>"
                    type="button"
                    class="btn btn-warning btn-sm ml-3"
                    >+ Warning
                </a>
                <a
                    href="/part-rem-warrning/<%= data._id %>"
                    type="button"
                    class="btn btn-primary btn-sm ml-3"
                    >- Warning
                </a>
            </h1>
        </div>
        <div>
            <h1 style="margin-left: 1em">
                <a
                    href="/show-all-ses/<%= data._id %>"
                    type="button"
                    class="btn btn-dark btn-sm ml-3"
                    >All</a
                >
                <a
                    href="/show-mod1-ses/<%= data._id %>"
                    type="button"
                    class="btn btn-dark btn-sm ml-3"
                    >First aid</a
                >
                <a
                    href="/show-mod2-ses/<%= data._id %>"
                    type="button"
                    class="btn btn-dark btn-sm ml-3"
                    >Cosmatics</a
                >
                <a
                    href="/show-mod3-ses/<%= data._id %>"
                    type="button"
                    class="btn btn-dark btn-sm ml-3"
                    >Nursing</a
                >
            </h1>
        </div>
    </body>
</html>
